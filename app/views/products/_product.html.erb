<% cache product do %>
      <div class="col-xs-12 col-md-6 products">
      <%=link_to image_tag(product.image_url, class: "img-responsive img-products") ,product if product.image_url %>
        <div class="product-description">
          <h1><%=product.name %></h1>
          <p2><%=product.color %></p2>
         <!--  <strong class="product-price">$<%=product.price %></strong> -->
        </div>
      </div><!-- /col -->
<% end %>