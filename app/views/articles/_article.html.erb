<% cache article do %>
  <div class="col-xs-12 col-md-6">
		<div class="articles_wrapper">
			<p class="article_image">
			<%=link_to image_tag(article.image_url, class: "img-responsive img-articles") ,article if article.image_url %>
			</p>
			<h1 class="article_title "><%= link_to article.title, article %></h1>
			<p class="article_date"><%= article.created_at.strftime("%B, %d, %Y") %>	
			</p>
		</div>
  </div><!-- /col -->
<% end %>